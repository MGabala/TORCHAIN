@page "/"
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Navigation
@implements IAsyncDisposable

<PageTitle>Index</PageTitle>
<div class="row">
    <div class="col">
        <div class="form-group">
            <p><label>User: <input @bind="userInput" /></label></p>
        </div>
        <div class="form-group">
            <p><label>Message: <input @bind="messageInput" size="50" /></label></p>
        </div>
        <button class="btn btn-primary" @onclick="Send" disabled="@(!IsConnected)">Send</button>
    </div>
    <div class="col">
    <ul id="messagesList">
            @foreach (var message in messages)
            {
                <li>@message</li>
            }
    </ul>
</div>
</div>

<hr>
<p><PostForm></PostForm></p>


<p><PostView></PostView></p>


